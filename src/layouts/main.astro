---
import MainContainer from "../components/MainContainer.astro";
import { HeadHrefLangs } from "astro-i18next/components";
import { SEO } from "astro-seo";
import { t } from "i18next";

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={t("site.title")}
      description={t("site.description")}
      openGraph={{
        basic: {
          title: t("site.description"),
          type: "website",
          image: "/images/about.webp",
        },
        image: {
          alt: t("site.alt"),
        },
      }}
    />
		<link rel="stylesheet" href="https://unpkg.com/open-props/easings.min.css" />
		<link rel="script" href="//cdn.credly.com/assets/utilities/embed.js" />
		<title>{title}</title>
		<HeadHrefLangs />
	</head>
	<body class="h-full sm:px-8 text-primary-100 selection:bg-accent-400 selection:text-black">
		<MainContainer>
      <slot />
    </MainContainer>
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      @layer base {
        :root,
        .dark {
          /* basically the zinc palette */
          --primary-50: 250 250 250;
          --primary-100: 244 244 245;
          --primary-200: 228 228 231;
          --primary-300: 212 212 216;
          --primary-400: 161 161 170;
          --primary-500: 113 113 122;
          --primary-600: 82 82 91;
          --primary-700: 63 63 70;
          --primary-800: 39 39 42;
          --primary-900: 24 24 27;

          --accent-verylight: 153 246 228;
          --accent-light: 94 234 212;
          --accent-regular: 45 212 191;
          --accent-dark: 20 184 166;
          --accent-darkest: 17 94 89;

          --main-bg: #000;
          --content-bg: #0a0a0a;
          --lighter-content-bg: #121212;

          --gradient-1: rgba(0, 0, 0, 0);
          --gradient-2: rgba(0, 0, 0, 0.74);
          --gradient-3-start: rgba(66, 240, 173, 0.756);
          --gradient-3-end: hsl(170, 100%, 50%);
        }

        .light {
          --gradient-1: rgba(255, 255, 255, 0);
          --gradient-2: #fafafad5;
          --gradient-3-start: rgba(66, 240, 173, 0.756);
          --gradient-3-end: hsl(170, 100%, 50%);
          --main-bg: #fafafad5;

          --primary-50: 0 0 0;
          --primary-900: 244 244 245;
          --primary-800: 228 228 231;
          --primary-700: 212 212 216;
          --primary-600: 161 161 170;
          --primary-500: 113 113 122;
          --primary-400: 82 82 91;
          --primary-300: 63 63 70;
          --primary-200: 39 39 42;
          --primary-100: 24 24 27;

          --accent-darkest: 153 246 228;
          --accent-dark: 94 234 212;
          --accent-regular: 38 188 169;
          --accent-light: 20 184 166;
          --accent-verylight: 17 94 89;

          --content-bg: #fafafa;
          --lighter-content-bg: #f4f3f3;
        }
      }

      html {
        background: var(--main-bg);
      }
      body {
        background: radial-gradient(
            84% 84% at -20% -20%,
            var(--main-bg) 0%,
            var(--gradient-1) 100%
          ),
          radial-gradient(
            40% 82% at 50% 50%,
            var(--gradient-2) 0%,
            var(--gradient-2) 100%
          ),
          radial-gradient(
            82% 60% at 34% 10%,
            var(--main-bg) 0%,
            var(--gradient-3-start) 46%,
            var(--gradient-3-end) 72%,
            var(--main-bg) 90%
          );
        background-repeat: no-repeat;
      }

			select {
				font-family: "Twemoji Country Flags";
				font-size: 2em;
				padding: 4px 6px 0px 4px;
				border: 0;
				background: none;
				-webkit-appearance: none;
			}
			select:focus {
				outline: none !important;
			}

			select option {
				background: black;
			}
    </style>
	</body>
</html>